<h3>Here is a list of the Articles:</h3>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><button><%= link_to 'Show', article_path(article) %></button></td>
      <td><button><%= link_to 'Edit', edit_article_path(article) %></button></td>
      <td><button><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td>
              <!-- Rails will first show a confirm dialog to the user, and then submit the link with method delete -->
    </tr>
  <% end %>
</table>

<button><%= link_to 'New Article', new_article_path %></button>